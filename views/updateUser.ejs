<!DOCTYPE html>
<html lang="en">
<head>
   <%-include('includes/headTag.ejs')%>
</head>
<body id="body">
   <%-include('includes/navbar.ejs')%>
   <div class='container'>
      <form name="updateForm" method="POST" action="/user/update">
         <div class="row g-2 mb-3 mt-3">
            <div class="col-md">
               <div class="form-floating">
                  <input name="recordIdBeUpdate" type="text" class="form-control" id="floatingInputGrid" placeholder="Enter the ID of the record to be updated">
                  <label for="floatingInputGrid" class="opacity-50">Enter the ID of the record to be updated</label>
               </div>
            </div>
         </div>
         <div class="row g-2">
            <div class="col-md">
               <div class="form-floating">
                  <input name="username" type="text" class="form-control" id="floatingInputGrid" placeholder="Alexander">
                  <label for="floatingInputGrid" class="opacity-50">New username</label>
               </div>
            </div>
            <div class="col-md">
               <div class="form-floating">
                  <input name="email" type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                  <label for="floatingInputGrid" class="opacity-50">New email address</label>
               </div>
            </div>
         </div>
         <div class="row mt-3 g-2">
            <div class="col-md">
               <div class="form-floating">
                  <input name="fname" type="text" class="form-control" id="floatingInputGrid" placeholder="Alex">
                  <label for="floatingInputGrid" class="opacity-50">New first name</label>
               </div>
            </div>
            <div class="col-md">
               <div class="form-floating">
                  <input name="lname" type="text" class="form-control" id="floatingInputGrid" placeholder="Jhon">
                  <label for="floatingInputGrid" class="opacity-50">New last name</label>
               </div>
            </div>
         </div>
         <input type="submit" class="mt-3 btn btn-primary" value='New record'></input>
      </form>
   </div>
   <%-include('includes/scripts.ejs')%>
   <%-include('includes/notification.ejs')%>
</body>
</html>